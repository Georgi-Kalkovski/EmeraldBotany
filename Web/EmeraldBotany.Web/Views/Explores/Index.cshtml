@model EmeraldBotany.Web.ViewModels.Explores.ExploresListViewModel
@using EmeraldBotany.Common
@{
    this.ViewData["Title"] = "Home Page";
}
<h1 class="text-center mt-2">Explore</h1>
<div class="row mt-2 mb-4">
    @{
        var counter = 0;
        foreach (var specie in Model.Explores.Reverse())
        {
            while (counter % 20 != 0 || counter == 0)
            {
                <div class="card col-6 col-lg-3 game-card">
                    <a asp-controller="Home" asp-action="Index">
                        @if (specie.ImageUrl == null)
                        {
                            <img src="~/img/empty-img.jpg" class="card-img-top img-fluid card-image" />
                        }
                        else
                        {
                            <img src="@specie.ImageUrl" class="card-img-top img-fluid card-image" style="height: 13rem;">
                        }
                        <div class="card-body">
                            <h5 class="card-title text-center" data-toggle="tooltip" data-placement="bottom"
                                title="Description:<br>@specie.ScientificName">
                                @specie.CommonName
                            </h5>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item text-center">@specie.Rank</li>
                                <li class="list-group-item">
                                    <span class="attack-stat">@specie.FamilyCommonName</span>
                                    <span class="health-stat">@specie.Genus</span>
                                    <span class="health-stat">@specie.Year</span>
                                    <span class="health-stat">@specie.Bibliography</span>
                                </li>
                            </ul>
                        </div>
                    </a>
                </div>
                counter++;
                break;
            }
            if (counter == 20)
            {
                break;
            }
        }
    }
</div>

